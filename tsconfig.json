{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "src/app/dashboard/page.tsx", "src/app/dashboard/layout.tsx", "../hooks/useBudget.ts", "../hooks/useBudgetComparison.ts", "../hooks/useCategoryData.ts", "../hooks/useMonthlyExpenses.ts", "../hooks/useRecentTransaction.ts", "../hooks/useTopCategory.ts", "../hooks/useTransaction.tsx"],
  "exclude": ["node_modules"]
}
